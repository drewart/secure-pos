<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drewart.securepos.securepos" >


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivationActivity"
            android:label="@string/title_activity_activation"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".BarcodeActivity"
            android:label="@string/title_activity_barcode"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".NumberDisplayActivity"
            android:label="@string/title_activity_number_display"
            android:screenOrientation="landscape">

        </activity>

        <activity
            android:name=".ConfirmationActivity"
            android:label="@string/title_activity_confirmation"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
